---
import Layout from '../layouts/Layout.astro';
import ElmProductCard from '../components/ElmProductCard.astro';
---

<Layout title="Bellroy Product Card - Transit Workpack 20L">
  <main class="mx-auto px-4 py-8 max-w-screen-xl">
    <header class="mb-10 text-center">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Bellroy Product Card</h1>
      <p class="text-gray-600">Interactive product display built with Elm and Tailwind CSS</p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center">
      <ElmProductCard />
      <!-- More cards could be added here -->
    </div>
  </main>
</Layout>