---
// ElmProductCard.astro
---

<div id="elm-app"></div>

<script>
  import { Elm } from '../elm/Main.elm';
  
  // Initialize the Elm application
  document.addEventListener('DOMContentLoaded', () => {
    const app = Elm.Main.init({
      node: document.getElementById('elm-app')
    });
  });
</script>

<style>
  /* Base styles for the container */
  #elm-app {
    width: 100%;
    max-width: 300px;
    margin: 0 auto;
  }

  /* These styles will apply to the Elm-generated HTML */
  :global(.product-card) {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    background: white;
  }

  :global(.product-image) {
    width: 100%;
    height: 0;
    padding-bottom: 100%; /* Creates a square aspect ratio */
    position: relative;
    overflow: hidden;
  }

  :global(.product-image img) {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  :global(.product-info) {
    padding: 16px;
  }

  :global(.product-name) {
    margin: 0 0 8px 0;
    font-size: 18px;
    font-weight: 500;
  }

  :global(.product-price) {
    margin: 0 0 12px 0;
    font-size: 16px;
    font-weight: 700;
    color: #333;
  }

  :global(.color-options) {
    display: flex;
    gap: 8px;
  }

  :global(.color-option) {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    cursor: pointer;
    transition: transform 0.2s ease;
    border: 2px solid transparent;
  }

  :global(.color-option.selected) {
    border-color: #000;
    transform: scale(1.1);
  }

  :global(.color-option:hover) {
    transform: scale(1.15);
  }
</style>